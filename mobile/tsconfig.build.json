{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__",
    "**/__mocks__",
    "**/__fixtures__",
    "**/__snapshots__",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "**/test-utils",
    "**/test",
    "**/tests",
    "**/e2e",
    "**/cypress"
  ]
}
